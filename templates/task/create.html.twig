{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
    <div>
        <h4 class="connected"><strong>{{ users.username }}</strong><div class="connected_circle"></div></h4>
    </div>
    {% endif %}
    <div class="row">
    <h1>Formulaire de création d'une nouvelle tâche :</h1>
        {{ form_start(form, {'action' : path('app_task_create')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success mt-4" style="margin-left:-0px">Ajouter</button>
        {{ form_end(form) }}

        <a href="{{ path('app_task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>
{% endblock %}
