{% extends 'base.html.twig' %}

{% block header_img %}
    {% if app.user %}
        <div>
            <h4 style="color: green">Vous êtes connecter en tant que : <strong>{{ users.username }}</strong></h4>
        </div>
    {% endif %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <a href="{{ path('app_task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-4">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="pull-right">
                        {% if task.isDone %}
                            <i class='bx bx-check'></i>
                        {% else %}
                            <i class='bx bx-x'></i>
                        {% endif %}
                    </h4>
                    <h4><a href="{{ path('app_task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                    <p>{{ task.content }}</p>
                    <h4> Créé par :
                        {% if task.user is null %}
                            Anonyme
                        {% else %}
                            {{ task.user.username }}
                        {% endif %}
                    </h4>
                </div>
                <div>
                    <form class="toggleTask" action="{{ path('app_task_toggle', {'id' : task.id }) }}">
                        <button class="btn btn-success btn-sm pull-right">
                            {% if not task.isDone %}
                                Marquer comme faite
                            {% else %}
                                Marquer non terminée
                            {% endif %}
                        </button>
                    </form>
                    <form class="deleteTask" method="post" action="{{ path('app_task_delete', {'id' : task.id }) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('app_task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
